<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5sp"
    android:paddingBottom="5sp">

    <include
        android:id="@+id/switch_tittle_summary"
        layout="@layout/miuix_tittle_summary"
        android:layout_width="0dp"
        android:layout_marginStart="27sp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_container"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 开关按钮部分 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/switch_container"
        android:layout_width="52sp"
        android:layout_height="28sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/switch_background_off"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/switch_tittle_summary"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 圆形按钮 -->
        <View
            android:id="@+id/switch_thumb"
            android:layout_width="22sp"
            android:layout_height="22dp"
            android:layout_margin="4sp"
            android:background="@drawable/thumb_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
