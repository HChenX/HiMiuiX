<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:minHeight="67dp"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <include
        android:id="@+id/switch_title_summary"
        layout="@layout/miuix_title_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_container"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 开关按钮部分 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/switch_container"
        android:layout_width="49dp"
        android:layout_height="28dp"
        android:background="@drawable/switch_background_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/switch_title_summary"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 圆形按钮 -->
        <View
            android:id="@+id/switch_thumb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="4.2dp"
            android:background="@drawable/thumb_background"
            android:longClickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
